doctype html
html
    head
        title= title
        link(rel='SHORTCUT ICON' href='/images/droneicon.jpg')
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/map.css')
        script(type="text/javascript" src="/javascripts/jquery-3.3.1.js")
        script(type="text/javascript" src="/javascripts/nav.js")
    body
        nav.navbar.navbar-expand-sm.navbar-light(role='navigation' style='background-color: #1a73e8;')
            div.container-fluid
                ul.navbar-nav
                    li.nav-item(style='color:white')= title
                ul.nav.navbar-right
                    div.dropdown
                        button.btn.btn-secondary.dpdmenu(data-toggle='dropdown' onclick='opt()')
                            img(width='20' height='20' src='/'+`${user.purl}`)
                            span= user.username
                        div.dropdown-menu.dropdown-menu-right#text(role='menu' style='display:none')
                            a.dropdown-item(href='/')= 'Main Page'
                            a.dropdown-item(href='/users')= 'Company Drones Map'
                            a.dropdown-item(href='/logout')= 'Logout here'
        div.text-center
            div
                p(value='&ensp;')
            img(style='height:300px;left:50%' src='/images/drones-task.jpg')
            form(action='/users/submitTask' method='post')
                h1.h3.font-weight-normal= 'Task Add'
                table(style='position:absolute;right:200px;')
                    tr
                    td= 'DroneId'
                    td(colspan='2')
                        input#droneid(type='text' name='droneid' placeholder='DroneId' style='position:relative;width:100%')
                    td(colspan='1')
                    tr
                    td= 'TakeOff'
                    td(colspan='1')
                        input#tlat(type='text' name='tlat' placeholder='latitude' style='position:relative;width:100%')
                    td(colspan='1')
                        input#tlgn(type='text' name='tlng' placeholder='longitude' style='position:relative;width:100%')
                    td(colspan='1')
                    tr
                    td= 'TakeOff Address'
                    td(colspan='1')
                        input#tad(type='text' name='tad' placeholder='address' style='position:relative;width:100%')
                    td(colspan='1')
                        input#tpo(type='text' name='tpo' placeholder='postcode' style='position:relative;width:100%')
                    td(colspan='1')
                    tr
                    td= 'Land'
                    td(colspan='1')
                        input#llat(type='text' name='llat' placeholder='latitude' style='position:relative;width:100%')
                    td(colspan='1')
                        input#llgn(type='text' name='llng' placeholder='longitude' style='position:relative;width:100%')
                    td(colspan='1')
                    tr
                    td= 'Land Address'
                    td(colspan='1')
                        input#lad(type='text' name='lad' placeholder='address' style='position:relative;width:100%')
                    td(colspan='1')
                        input#lpo(type='text' name='lpo' placeholder='postcode' style='position:relative;width:100%')
                    td(colspan='1')
                    tr
                    td= 'CargoId'
                    td(colspan='2')
                        input#cargoid(type='text' name='cargoid' placeholder='CargoId' style='position:relative;width:100%')
                    td(colspan='1')
                    tr
                    td= 'Note'
                    td(colspan='2')
                        textarea#note( name='note' row='6' col='4' style='position:relative;width:100%')
                    td(colspan='1')
                    tr
                    td(colspan='3')
                        button.btn.btn-primary(type='submit')= 'SUBMIT'
                        br
                        a(href='#' onclick='javascript:history.back(-1)')= 'Return'

