doctype html
html
    head
        title= 'MAP'
        link(rel='SHORTCUT ICON' href='/images/droneicon.jpg')
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/map.css')
        script(type="text/javascript" src="/javascripts/jquery-3.3.1.js")
        script(type="text/javascript" src="/javascripts/nav.js")
    body
        nav.navbar.navbar-expand-sm.navbar-light(role='navigation' style='background-color: #1a73e8;')
            div.container-fluid
                ul.navbar-nav
                    li.nav-item(style='color: white')= 'Drone Map'
                ul.nav.navbar-right
                    div.dropdown
                        button.btn.btn-secondary.dpdmenu(data-toggle='dropdown' onclick='opt()')
                            img(width='20' height='20' src=`${user.purl}`)
                            span= user.username
                        div.dropdown-menu.dropdown-menu-right#text(role='menu' style='display:none')
                            a.dropdown-item(href='/')= 'Main Page'
                            a.dropdown-item(href='/users/addTask')= 'Add Task'
                            a.dropdown-item(href='/logout')= 'Logout here'
        div.container-fluid(style='top:1rem;bottom:0')
            div.row
                div.col-md-2
                    h1= 'Drone'
                    table
                        thead
                            tr
                                th= 'ID'
                                th= 'Speed'
                                th= 'Latitude'
                                th= 'Longitude'
                        tbody#drones

                div.col-md-8
                    h1= 'Map'
                    div#map(style='height:600px;width:1000px')
                    script(async defer src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCdMi7zuQh2w-RZYBxwlcHzb05UtFPdkL0&callback=initMap')
                    script(src='/javascripts/init.js')
                div.col-md-2
                    h1= 'Weather'
                    div#weather
            div.row
                div.col-md-12
                    h1= 'Tasks'
                    table.tab-content#tasks
                        thead
                            tr
                                th= 'task'
                                th= 'drone'
                                th= 'datetime'
                                th= 'cargo'
                                th= 'ongoing'
                                th= 'notes'
